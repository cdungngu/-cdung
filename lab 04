def readfile(name = 'poem.txt'):
    with open(name, 'r') as f:
        print(f.readline().strip())
        print(f.readline().strip())
        
#2
def count_line(file_name):
    count=0
    with open(file_name,'r') as file:
        for line in file:
            if not line.strip().startswith('T'):
                count+=1
    return count
result=count_line('story.txt')

#Q2
#1
def count_words_in_file(file_path):
    with open(file_path, 'r') as file:
        text = file.read()
        words = text.split()
        total_words = len(words)
        print(f"Total number of words in the file: {total_words}")

#2
def display_words():
    with open("story.txt", "r") as file:
        for line in file:
            words = line.split()
            for word in words:
                if len(word) < 4:
                    print(word)

#Q3
def count_uppercase_chars(file_path):
    count = 0
    with open(file_path, 'r') as file:
        text = file.read()
        for char in text:
            if char.isupper():
                count += 1
    return count

# Example Usage
file_path = 'sample_text.txt'
uppercase_count = count_uppercase_chars(file_path)
print(f"Number of uppercase characters in the file: {uppercase_count}")

